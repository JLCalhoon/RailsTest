<p style="color: green"><%= notice %></p>

<h1>Victories</h1>

<div id="victories">
  <% @victories.each do |victory| %>
  	<% if current_user == victory.user %>
  		<div class='card' style="width: 30rem;margin:20px;">
  			<div class='card-body'>
	    		<%= render victory %>
	     		<%= link_to "View", victory, class:"card-link" %>
    		</div>
    	</div>
    <% end %>
  <% end %>
</div>

<%= link_to "New victory", new_victory_path %>
